{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Orphelix",
  "version": "1.1.0",
  "identifier": "com.orphelix.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../.next/standalone"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/icon.icns"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 Orphelix",
    "category": "DeveloperTool",
    "shortDescription": "Modern Kubernetes Dashboard",
    "longDescription": "Orphelix is a modern Kubernetes dashboard with real-time monitoring, topology visualization, and GitOps integration.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Orphelix",
        "url": "http://localhost:3000",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
