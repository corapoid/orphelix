    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.3",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
