{
  "name": "orphelix-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app",
    "landing-page",
    "packages/*"
  ],
  "scripts": {
    "build:ui": "cd packages/ui && npm run build",
    "dev:app": "cd app && npm run dev",
    "dev:landing": "cd landing-page && npm run dev",
    "build:app": "cd app && npm run build",
    "build:landing": "cd landing-page && npm run build",
    "screenshots": "tsx scripts/generate-screenshots.ts",
    "lint": "cd app && npm run lint",
    "type-check": "cd app && npm run type-check",
    "test": "cd app && npm run test",
    "build": "npm run build:ui && npm run build:app && npm run build:landing",
    "tauri:dev": "cd app && npm run tauri:dev",
    "tauri:build": "cd app && npm run tauri:build"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.4"
  }
}
